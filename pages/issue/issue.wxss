/* pages/issue/issue.wxss */
page{
  padding-top: 30rpx;
}
.list{
  background: #fff;
  margin-bottom: 5rpx;
  padding: 30rpx 25rpx;
  height: 90rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.show{
  height: auto;
}
.list .header{
  height: 60rpx;
}
.list .header .icon{
  width: 40rpx;
  height: 40rpx;
  background-image:url('data:image/png;base64,');
  background-size: 100% 100%;
  color: #fff;
  text-align: center;
  line-height: 35rpx;
  font-size: 20rpx;
  margin-top:5rpx;
}
.list .header .drop-down{
  display: flex;
  align-items: center;
  margin-top: 5rpx;
}
.list .header .drop-down image{
  width: 10rpx;
  height: 20rpx;
}
.show .header .drop-down image{
  transform:rotate(-90deg);
}
.list .header .title{
  color: #333;
  font-size: 28rpx;
  margin: 0 50rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list .info{
  font-size: 24rpx;
  color: #999999;
  line-height: 30rpx;
  margin: 10rpx 50rpx;
}