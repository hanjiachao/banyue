/* pages/indent/indent.wxss */
page{
  background: #F2F3F4;
}
.conts .header{
  background: #fff;
  overflow: hidden;
}
.conts .header .title{
  padding: 0 25rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
  height: 90rpx;
  line-height: 90rpx;
}
.conts .header .info{
  background: #F9F9F9;
  padding: 25rpx;
  margin-bottom: 30rpx;
}
.conts .header .info .img{
  width: 140rpx;
  height: 140rpx;
}
.conts .header .info .img image{
  width: 100%;
  height: 100%;
}
.conts .header .info .text{
  margin-left: 170rpx;
}
.conts .header .info .text .head{
  color: #000000;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.conts .header .info .text .money{
  color: #FE4545;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.conts .integral{
  background: #fff;
  padding: 0 25rpx;
  margin-top: 20rpx
}
.conts .integral .head{
  position: relative;
  height: 105rpx;
  line-height: 105rpx;
  color: #333333;
  font-size: 28rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.conts .integral .head .checkbox{
  display: flex;
  align-items: center;
}
.conts .integral .head checkbox .wx-checkbox-input{
  width: 25rpx;
  height: 25rpx;
  border: 2rpx solid #09B88F;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 25rpx; 
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  font-size: 30rpx; 
}
.conts .integral .ipt{
  display: flex;
  justify-content:center;
  align-items:Center;
}
.conts .integral input{
  width: 90rpx;
  color: #CCCCCC;
  font-size: 24rpx;
  border-bottom: 1rpx solid #666666;
  display: inline-block;
}
.conts .integral .ipt text{
  color: #999999;
  font-size: 28rpx;
  margin-left: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.conts .integral .head .num{
  padding: 0 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #F94D5C;
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 220rpx;
  transform: translateY(-50%)
}
.conts .rule .text image{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}
.conts .rule .text text{
  color: #333333;
  font-size: 28rpx;
  margin-left: 20rpx;
  line-height: 90rpx;
}
.conts .rule .num{
  color: #FE4646;
  font-size: 28rpx;
  line-height: 90rpx;
}
.conts .tel{
  border-top: 20rpx solid #F2F3F4;
  background: #fff;
  padding: 30rpx 25rpx;
}
.conts .tel .title{
  color: #333333;
  font-size: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.conts .tel .ipt{
  padding: 30rpx 0;
}
.conts .tel .ipt text{
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  vertical-align: middle;
}
.conts .tel .ipt .box{
  margin-left: 150rpx;
  line-height: 40rpx;
}
.conts .tel .ipt input{
  color: #CCCCCC;
  font-size: 24rpx;
  width: 100%;
}
.conts .tel .checkbox{
  color: #333333;
  font-size: 28rpx;
}
.conts .tel .checkbox checkbox .wx-checkbox-input{
  width: 25rpx;
  height: 25rpx;
  border: 2rpx solid #09B88F;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 25rpx; 
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  font-size: 30rpx; 
}
.conts .pay{
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx 25rpx;
}
.conts .pay .title{
  color: #333333;
  font-size: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F2F2F2;
}
.conts .pay .info{
  padding: 20rpx 0;
}
.conts .pay .mode .icon{
  width: 42rpx;
  height: 32rpx;
  display: inline-block;
  vertical-align: top;
}
.conts .pay .mode .icon image{
  width: 100%;
  height: 100%;
}
.conts .pay .mode text{
  margin-left: 20rpx;
  color: #333333;
  font-size: 28rpx;
}
.conts .pay .radio radio .wx-radio-input{
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #09B88F;
}
.conts .pay .checkbox{
  color: #999999;
  font-size: 26rpx;
}
.conts .pay .checkbox checkbox .wx-checkbox-input{
  width: 25rpx;
  height: 25rpx;
  border: 2rpx solid #09B88F;
}
.conts .pay .checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 25rpx; 
  height: 25rpx;
  line-height: 25rpx;
  text-align: center;
  font-size: 30rpx; 
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #fff;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
}
.footer .money{
  width: 50%;
  background: #F4F4F4;
  text-align: center;
  font-size: 32rpx;
}
.footer .money .text{
  color: #333333;
  margin-right: 30rpx;
}
.footer .money .num{
  color: #FE4646;
}
.footer .btn{
  width: 50%;
  background: #0BC99D;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}
.agreement{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
}
.agreement .wrap{
  width: 625rpx;
  margin: 125rpx auto 0;
  position: relative;
}
.agreement .wrap .bg{
  width: 100%;
}
.agreement .wrap .info{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  text-align: center;
}
.agreement .wrap .info .head{
  color: #0BC99D;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.agreement .wrap .info .head .icon{
  margin: 0 15rpx 0 0;
  width: auto;
  height: 100%;
  display: flex;
  align-items: center;
}
.agreement .wrap .info .head .icon image{
  width: 4rpx;
  height: 29rpx;
}
.agreement .wrap .info .title{
  color: #333333;
  font-size: 32rpx;
}
.agreement .wrap .info .item{
  text-indent: 2em;
  color: #333333;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: left;
  margin-top: 35rpx;
}
.agreement .icon{
  width: 60rpx;
  height: 60rpx;
  margin: 60rpx auto 0;
}
.agreement .icon image{
  width: 100%;
  height: 100%;
}
.successful{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
}
.successful .panel{
  background: #FFFFFF;
  width: 600rpx;
  border-radius: 10rpx;
  padding: 50rpx 30rpx 40rpx;
  text-align: center;
  margin: 315rpx auto
}
.successful .panel .title{
  color: #333333;
  font-size: 40rpx;
}
.successful .panel .info{
  color: #333333;
  font-size: 28rpx;
  margin-top: 25rpx;
}
.successful .panel .btn{
  color: #FFFFFF;
  font-size: 32rpx;
  margin-top: 55rpx;
}
.successful .panel .btn view{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}
.successful .panel .btn .leave{
  background: #0BC99D;
}
.successful .panel .btn .return{
  background: #CCCCCC;
}