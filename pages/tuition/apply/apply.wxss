/* pages/tuition/apply/apply.wxss */
.perch{
  height: 60rpx;
  background: #0BC99D;
}
.conts{
  margin: 0 25rpx;
  box-sizing: border-box;
  position: relative;
  padding-top: 75rpx;
}
.conts .header{
  background: #fff;
  color: #333;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: -35rpx;
  z-index: 999;
}
.conts .form{
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx 30rpx 150rpx;
}
.conts .form .item{
  border-bottom: 2rpx solid #DDDDDD;
  height: 90rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.conts .form .item .title{
  color: #333333;
  font-size: 28rpx;
  height: 100%;
  line-height: 90rpx;
}
.conts .form .item .ipt{
  margin-left: 120rpx;
  color: #CCCCCC;
  font-size: 28rpx;
  text-align: right;
  height: 100%;
  line-height: 90rpx;
}
.conts .form .item .ipt input{
  height: 100%;
}
.conts .form .item .ipt picker{
  width:100%;
  height:100%;
}
.conts .form .panel{
  margin-top: 65rpx;
}
.conts .form .panel .radios{

}
.conts .form .radios text{
  font-size: 30rpx;
  color: #333333;
}
.conts .form .radios .radio-group{
  display: inline-block;
}
.conts .form .radios .radio-group .radio{
  margin-left: 50rpx;
  font-size: 30rpx;
  color: #333333;
}
radio .wx-radio-input{
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  margin-top: -4rpx;
}
.conts .btn{
  margin: 60rpx 0;
  background: #0BC99D;
  color: #fff;
  font-size: 32rpx;
}
/*遮罩*/
.shade{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background:rgba(0,0,0,0.5);
  z-index: 999;
}
.shade .content{
  background: #fff;
  width: 600rpx;
  border-radius: 10rpx;
  text-align: center;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.shade .content .title{
  font-size: 42rpx;
  color: #333333;
  margin-top: 80rpx;
}
.shade .content .text{
  font-size: 28rpx;
  color: #999999;
  margin: 30rpx 0 55rpx;
}
.shade .content .footer{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  color: #0BC99D;
  border-top: 2rpx solid #DDDDDD;
}

