/* pages/myStudy/myStudy.wxss */
page{
  background: #fff;
}
.conts{
  padding: 0 25rpx;
}
.conts .list{
  box-shadow:0rpx 1rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:10rpx;
  margin-top: 50rpx;
  padding: 30rpx;
}
.conts .list .videoBox{
  width: 210rpx;
  height: 145rpx;
  position: relative;
}
.conts .list .videoBox .video{
  width: 100%;
  height: 100%;
}
.conts .list .videoBox .schedule{
  position:absolute;
  bottom:0;
  left:0;
  right:0;
  font-size:28rpx;
  color:#fff;
  line-height:30rpx;
  text-align:center;
  top:0;
  background:rgba(0,0,0,.5);
}
.conts .list .schedule .wrap{
  margin: 70rpx 10rpx 0;
}
.conts .list .schedule .box{
  margin-top: 15rpx;
  height: 10rpx;
  background: #1A1A1A;
  border-radius: 5rpx;
  overflow: hidden;
}
.conts .list .schedule .box .content{
  height: 100%;
  background: rgba(255, 255, 255, .8);
}
.conts .list .info{
  margin-left: 260rpx;
}
.conts .list .info .title{
  color: #333333;
  font-size: 32rpx;
  height: 45rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.conts .list .timer{
  height: 55rpx;
}
.conts .list .timer .text{
  color: #999999;
  font-size: 28rpx;
  line-height: 30rpx;
}
.conts .list .timer .number{
  color: #666666;
  font-size: 32rpx;
  line-height: 30rpx;
  margin-left: 25rpx;
}
.conts .list .info .btn{
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  border: 2rpx solid #0BC99D;
  border-radius: 20rpx;
  color: #0BC99D;
}