/* pages/courseList/courseList.wxss */
.conts,page{
  height: 100%;
  background: #fff;
}
.conts .header{
  background: #0BC99D;
  color: #fff;
  height: 85rpx;
  line-height: 85rpx;
  padding: 0 25rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 999
}
.conts .header .screen{
  height: 100%;
  display: flex;
  align-items: center;
}
.conts .header .screen image{
  width: 40rpx;
  height: 35rpx;
}
.conts .header .head{
  margin-right: 50rpx;
}
.conts .header .tab{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  box-sizing: border-box;
}
.conts .header .tab .title{
  display: inline-block;
  position: relative;
  font-size: 30rpx;
  margin-right: 70rpx;
}
.conts .header .title:last-child{
  margin-right: 0;
}
.conts .header .tab .title text{
  display: block;
}
.conts .header .title .active{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 10rpx;
  height: 6rpx;
  background: #fff;
}
.itemList .list{
  padding: 40rpx 0;
  margin: 0 25rpx;
  height: 205rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #DBDBDB;
}
.itemList .list .imgBox{
  width: 125rpx;
  height: 125rpx;
  position: relative;
}
.itemList .list .imgBox .bgImg{
  width: 100%;
  height: 100%;
}
.itemList .list .imgBox .mark{
  position: absolute;
  left: 0;
  top: 0;
  background: #FF4C4C;
  color: #fff;
  font-size: 24rpx;
  padding: 0rpx 20rpx;
  line-height: 40rpx;
  border-radius:7rpx 0rpx 20rpx 0rpx;
}
.conts .scropll{
  margin-top: 85rpx;
}
.itemList .list .item{
  margin-left: 150rpx;
}
.itemList .list .item .title{
  font-size: 28rpx;
  color: #000000;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
