/* pages/profile/write/write.wxss */
.conts{
  padding: 25rpx 25rpx 0;
  box-sizing: border-box;
  position: relative;
}
.conts textarea{
  width: 100%;
  height: 300rpx;
  background: #fff;
  padding: 30rpx 25rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  color: #B3B3B3;
  font-size: 30rpx;
}
.conts text{
  position: absolute;
  top: 250rpx;
  right: 70rpx;
  color: #B3B3B3;
  font-size: 26rpx;
}
.conts button{
  margin: 215rpx 25rpx 0;
  background: #0BC99D;
  color: #FFFEFE;
  font-size: 32rpx;
}